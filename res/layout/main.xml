<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/viewGroup01">
    
    
        <Button
            android:id="@+id/menu_xuemei"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/year"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/tvMsg1"
            android:layout_alignTop="@+id/tvMsg1"
            android:layout_alignBottom="@+id/tvMsg2"
            android:button="@null"
            android:background="@drawable/ic_mei_menu"
            android:gravity="fill_horizontal" 
            android:onClick="showPopup" 
            />
    
       
        
        <TextView 
        android:id="@+id/tvMsg1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="三月 "
        />
        <TextView 
           android:id="@+id/tvMsg2"
           android:layout_below="@+id/tvMsg1"
           android:layout_alignLeft="@+id/tvMsg1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="10dp"
           android:textSize="15sp"
           android:text="2016年3月1日"
         />

        <Button
            android:id="@+id/decyear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvMsg2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="-" />
        <TextView 
            android:id="@+id/year"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/decyear"
            android:layout_alignBottom="@+id/decyear"
            android:gravity="center"
            android:textSize="15sp"
            android:text="2016年"
            />
        <Button
            android:id="@+id/addyear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvMsg2"
            android:layout_toRightOf="@+id/year"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="+" />
        
        
        <Button
            android:id="@+id/decmonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvMsg2"
            android:layout_toRightOf="@+id/addyear"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="-" />
        <TextView 
            android:id="@+id/month"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/decmonth"
            android:layout_alignBottom="@+id/decmonth"
            android:gravity="center"
            android:textSize="15sp"
            android:text="3月"
            />
        <Button
            android:id="@+id/addmonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvMsg2"
            android:layout_toRightOf="@+id/month"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="+" />

</RelativeLayout>
